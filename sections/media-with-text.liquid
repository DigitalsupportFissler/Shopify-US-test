<style>
  #shopify-section-{{ section.id }} {
    --media-with-text-gap: {% if section.settings.spacing == 'none' %}0{% else %}40px{% endif %};
    --media-with-text-item-grid-template: "media" "content" / auto;
    /* --content-over-media-height: {% if section.settings.image_size == 'sm' %}180px{% elsif section.settings.image_size == 'md' %}250px{% elsif section.settings.image_size == 'lg' %}350px{% else %}auto{% endif %};
    --media-with-text-item-overlay: {{ section.settings.overlay_color.rgb }} / {{ section.settings.overlay_opacity | divided_by: 100.0 }}; */

  }

  @media screen and (min-width: 1000px) {
    #shopify-section-{{ section.id }} {
      --media-with-text-gap: 80px;
    }
  }

  {% comment %} @media screen and (max-width: 699px) {
    .media-with-text__content .text-start {
      text-align: center;
    }
  } {% endcomment %}


  .media-with-text__content {
    --media-with-text-content-padding: 0px;
  }

  {%- for block in section.blocks -%}
    {%- assign media_ratio = block.settings.media_width | divided_by: 50.0 -%}
    {%- assign content_ratio = 2.0 | minus: media_ratio -%}

    #block-{{ section.id }}-{{ block.id }} {
      --media-with-text-item-icon-width: {{ block.settings.icon_width }}px;
    }

    @media screen and (min-width: 700px) {
      #block-{{ section.id }}-{{ block.id }} {
        {%- if section.settings.alternate_media_position -%}
          {% assign modulo = forloop.index0 | modulo: 2 %}

          {% if modulo == 0 %}
            --media-with-text-item-grid-template: "media content" / minmax(0, {{ media_ratio }}fr) minmax(0, {{ content_ratio }}fr);
          {%- else -%}
            --media-with-text-item-grid-template: "content media" / minmax(0, {{ content_ratio }}fr) minmax(0, {{ media_ratio }}fr);
          {%- endif -%}
        {%- else -%}
          {%- if block.settings.media_position == 'start' -%}
            --media-with-text-item-grid-template: "media content" / minmax(0, {{ media_ratio }}fr) minmax(0, {{ content_ratio }}fr);
          {%- else -%}
            --media-with-text-item-grid-template: "content media" / minmax(0, {{ content_ratio }}fr) minmax(0, {{ media_ratio }}fr);
          {%- endif -%}
        {%- endif -%}
      }
    }
  {%- endfor -%}
</style>

