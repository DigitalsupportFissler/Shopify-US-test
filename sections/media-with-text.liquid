    </div>
  {% endif %}
  {% if section.settings.show_section_id %}
    <div class="section-id-label" style="font-size: 12px; color: #666; margin-bottom: 10px;">
      Section ID: {{ section.id }}
    </div>
  {% endif %}
  <media-with-text class="media-with-text {% if section.settings.spacing == 'none' %}{% if section.settings.full_width %}full-bleed{% else %}rounded{% endif %}{% endif %}">
    {%- for block in section.blocks -%}
      {% assign image_gallery = false %}
      {% if block.settings.second_image != blank or block.settings.third_image != blank %}
        {% assign image_gallery = true %}
      {% endif %}
      <style>
        #shopify-section-{{ section.id }} {
          .media-with-text__media-overlay {
            --text-color: {{ block.settings.overlay_text_color }};
            --media-with-text-item-overlay: {{ block.settings.overlay_color.rgb }} / {{ block.settings.overlay_opacity | divided_by: 100.0 }}
          }
        }

        {%- if image_gallery -%}
          @media screen and (max-width: 1025px) {
            #shopify-section-{{ section.id }} {
              #block-{{ section.id }}-{{ block.id }} {
                --media-with-text-item-grid-template: "media" "content" / auto
              }

              .media-with-text__content {
                & > div {
                  text-align: center;
                }
              }
            }
          }
          @media screen and (min-width: 1025px) {
            #shopify-section-{{ section.id }} {
              .media-with-text__content {
                padding-left: 0;
              }
            }
          }

        {%- endif -%}
      </style>
      <div id="block-{{ section.id }}-{{ block.id }}" class="media-with-text__item" {{ block.shopify_attributes }}>
        <div
          class="media-with-text__media {% unless section.settings.spacing == 'none' %}rounded{% endunless %}"
          reveal-on-scroll="true"
        >
          {%- liquid
            assign loading_strategy = null

            if section.index > 3 or forloop.index > 3
              assign loading_strategy = 'lazy'
            endif
          -%}

          {%- if block.type == 'image' -%}
            {%- if block.settings.image != blank -%}
              {%- assign width_ratio = 100.0 | divided_by: block.settings.media_width -%}
              {%- assign maximum_image_width = settings.page_width | divided_by: width_ratio -%}

              {%- capture sizes -%}(max-width: 999px) 100vw, min({{ maximum_image_width | ceil }}px, {{ block.settings.media_width }}vw){% endcapture %}

              {% if image_gallery %}
                <div class="media-with-text__gallery">
                  <div>
                    {% if block.settings.second_image != blank %}
                      {{-
                        block.settings.second_image
                        | image_url: width: block.settings.image.width
                        | image_tag:
                          loading: loading_strategy,
                          sizes: sizes,
                          widths: '300,400,500,600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600'
                      -}}
                    {% endif %}
                    {% if block.settings.third_image != blank %}
                      {{-
                        block.settings.third_image
                        | image_url: width: block.settings.image.width
                        | image_tag:
                          loading: loading_strategy,
                          sizes: sizes,
                          widths: '300,400,500,600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600'
                      -}}
                    {% endif %}
                  </div>
                  <div>
                    {{-
                      block.settings.image
                      | image_url: width: block.settings.image.width
                      | image_tag:
                        loading: loading_strategy,
                        sizes: sizes,
                        widths: '300,400,500,600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600'
                    -}}
                  </div>
                </div>
              {% else %}
                {{-
                  block.settings.image
                  | image_url: width: block.settings.image.width
                  | image_tag:
                    loading: loading_strategy,
                    sizes: sizes,
                    widths: '300,400,500,600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600'
                -}}
              {% endif %}
            {%- else -%}
              {{- 'image' | placeholder_svg_tag: 'aspect-short placeholder' -}}
            {%- endif -%}
            <div class="media-with-text__media-overlay">
              {% if block.settings.overlay_subheading != blank %}
                <p class="media-with-text__media-overlay-subheading text-center h6">
                  {{ block.settings.overlay_subheading }}
                </p>
              {% endif %}

              {% if block.settings.overlay_heading != blank %}
                <{{ block.settings.overlay_heading_tag | default: 'h2' }} class="media-with-text__media-overlay-heading text-center {{ block.settings.overlay_heading_tag | default: 'h2' }}">
                  {{ block.settings.overlay_heading }}
                </{{ block.settings.overlay_heading_tag | default: 'h2' }}>
              {% endif %}
            </div>
          {%- else -%}
            {%- capture poster -%}
              {%- assign poster_image = block.settings.poster_image | default: block.settings.video.preview_image -%}

              {%- if poster_image -%}
                {{- poster_image | image_url: width: poster_image.width | image_tag: loading: loading_strategy, sizes: '(max-width: 699px) 400px, 800px', widths: '200,300,400,500,600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: 'rounded' -}}
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'rounded' }}
              {%- endif -%}
            {%- endcapture -%}

            {%- if block.settings.video -%}
              <video-media
                {% if block.settings.autoplay %}
                  autoplay
                {% else %}
                  show-play-button
                {% endif %}
                style="--aspect-ratio: {{ block.settings.video.aspect_ratio }}"
              >
                {%- unless block.settings.autoplay -%}
                  {{- poster -}}
                {%- endunless -%}

                {%- if block.settings.autoplay -%}
                  {{-
                    block.settings.video
                    | video_tag: playslinline: true, muted: true, loop: true, preload: 'metadata'
                  -}}
                {%- else -%}
                  {{-
                    block.settings.video
                    | video_tag: playslinline: true, controls: true, muted: false, loop: false, preload: 'metadata'
                  -}}
                {%- endif -%}
              </video-media>
            {%- else -%}
              <video-media
                host="{{ block.settings.external_video_url.type }}"
                {% if block.settings.autoplay %}
                  autoplay
                {% else %}
                  show-play-button
                {% endif %}
              >
                {%- unless block.settings.autoplay -%}
                  {{- poster -}}
                {%- endunless -%}

                <template>
                  {%- if block.settings.external_video_url.type == 'youtube' -%}
                    <iframe
                      src="https://www.youtube.com/embed/{{ block.settings.external_video_url.id }}?playsinline=1&autoplay=1&controls=0&mute={% if block.settings.autoplay %}1{% else %}0{% endif %}&loop=1&playlist={{ block.settings.external_video_url.id }}&enablejsapi=1&rel=0&modestbranding=1&origin={{ 'https://' | append: request.host | url_encode }}"
                      allow="autoplay; encrypted-media"
                      allowfullscreen="allowfullscreen"
                    ></iframe>
                  {%- elsif block.settings.external_video_url.type == 'vimeo' -%}
                    <iframe
                      src="https://player.vimeo.com/video/{{ block.settings.external_video_url.id }}?autoplay=1&autopause=1&background={% if block.settings.autoplay %}1{% else %}0{% endif %}&loop=1&muted={% if block.settings.autoplay %}1{% else %}0{% endif %}&transparent=0&responsive=1&portrait=0&title=0&byline=0&color={{ settings.text_color | remove_first: '#' }}"
                      allow="autoplay; encrypted-media;"
                      allowfullscreen="allowfullscreen"
                    ></iframe>
                  {%- endif -%}
                </template>
              </video-media>
            {%- endif -%}
          {%- endif -%}
        </div>

        {%- capture content_class -%}media-with-text__content {% unless block.settings.disable_content_vertical_padding %}no-vertical-padding{% endunless %} {% unless section.settings.spacing == 'none' %}rounded{% endunless %}{%- endcapture -%}
        <div
          {% render 'surface',
            class: content_class,
            background: block.settings.background,
            background_gradient: block.settings.background_gradient,
            text_color: block.settings.text_color
          %}
        >
          {% assign mobile_classes = block.settings.text_position_mobil | default: block.settings.text_position %}
          {% assign desktop_classes_array = block.settings.text_position | split: ' ' %}
          {% assign desktop_classes_prefixed = '' %}
          {% for cls in desktop_classes_array %}
            {% assign desktop_classes_prefixed = desktop_classes_prefixed | append: ' sm:' | append: cls %}
            {% unless forloop.last -%}
              {%- assign desktop_classes_prefixed = desktop_classes_prefixed | append: ' ' -%}
            {%- endunless %}
          {% endfor %}
          <div
            class="prose break-all {{ mobile_classes }}{{ desktop_classes_prefixed | prepend: ' ' }}"
            reveal-on-scroll="true"
          >
            {%- if block.settings.custom_icon != blank -%}
              {%- capture sizes -%}{{ block.settings.icon_width }}px{%- endcapture -%}
              {%- capture widths -%}{{ block.settings.icon_width }}, {{ block.settings.icon_width | times: 2 | at_most: block.settings.custom_icon.width }}{%- endcapture -%}
              {{-
                block.settings.custom_icon
                | image_url: width: block.settings.custom_icon.width
                | image_tag: loading: loading_strategy, sizes: sizes, widths: widths, class: 'media-with-text__icon'
              -}}
            {%- elsif block.settings.icon != 'none' -%}
              {%- render 'icon' with block.settings.icon,
                width: block.settings.icon_width,
                height: block.settings.icon_width,
                class: 'media-with-text__icon'
              -%}
            {%- endif -%}

            {%- if block.settings.subheading != blank -%}
              <p class="subheading">{{ block.settings.subheading | escape }}</p>
            {%- endif -%}

            {%- if block.settings.title != blank -%}
              <{{ block.settings.heading_tag | default: 'h3' }} class="{{ block.settings.heading_tag | default: 'h3' }}">
                {%- render 'styled-text', content: block.settings.title, gradient: block.settings.text_gradient -%}
              </{{ block.settings.heading_tag | default: 'h3' }}>
            {%- endif -%}

            {% if block.settings.content != blank %}
              <div class="content">
                {{- block.settings.content -}}
              </div>
            {% endif %}

            {%- if block.settings.link_text != blank -%}
              {%- render 'button',
                size: 'base',
                class: 'text-sm uppercase',
                href: block.settings.link_url,
                content: block.settings.link_text,
                background: block.settings.button_background,
                text_color: block.settings.button_text_color
              -%}
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </media-with-text>
</div>

