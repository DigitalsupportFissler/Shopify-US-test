{%- assign newsletter_block = section.blocks | where: 'type', 'newsletter' | first -%}

{%- if section.blocks.size > 3 -%}
  <style>
    @media screen and (min-width: 1000px) {
      #shopify-section-{{ section.id }} {
        {%- if newsletter_block != blank -%}
          --footer-block-list-gap: var(--spacing-10);
        {%- endif -%}

        --footer-block-list-justify-content: space-between;
      }
    }
    a[onclick] {
      cursor: pointer;
    }
  </style>
{%- endif -%}

<div class="footer">
  <div class="container">
    <div class="footer__wrapper">
      {%- comment -%}
        ------------------------------------------------------------------------------------------------------------------
        BLOCK AREA
        ------------------------------------------------------------------------------------------------------------------
      {%- endcomment -%}

      {%- if section.blocks.size > 0 -%}
        <div class="footer__block-list empty:hidden">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when '@app' -%}
                <div class="footer__block footer__block--app">
                  {%- render block -%}
                </div>

              {%- when 'text' -%}
                {%- if block.settings.title != blank
                  or block.settings.content != blank
                  or shop.features.follow_on_shop?
                  and block.settings.enable_follow_on_shop
                -%}
                  <div class="footer__block footer__block--text" {{ block.shopify_attributes }}>
                    {%- if block.settings.title != blank -%}
                      <p class="bold">{{ block.settings.title | escape }}</p>
                    {%- endif -%}

                    {%- if block.settings.content != blank -%}
                      <div class="prose text-subdued">
                        {{- block.settings.content -}}
                      </div>
                    {%- endif -%}

                    {%- if shop.features.follow_on_shop? and block.settings.enable_follow_on_shop -%}
                      <div class="follow-on-shop">
                        {{- shop | login_button: action: 'follow' -}}
                      </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}

              {%- when 'links' -%}
                {%- if block.settings.menu != blank -%}
                  {% capture menu_content %} 
                    <ul class="v-stack gap-6" role="list">
                      {%- for link in block.settings.menu.links -%}
                        <li>
                          <a href="{{ link.url }}" class="break-all text-base reversed-link hover:show">{{ link.title }}</a>
                        </li>
                      {%- endfor -%}
                      {%- if block.settings.menu == 'rechtliches' -%}
                        <li>
                          <a onclick="UC_UI.showSecondLayer();" class="break-all text-base reversed-link hover:show cursor-pointer" style="cursor: pointer;">Einwilligungseinstellungen</a>
                        </li>
                      {%- endif -%}
                    </ul>
                  {% endcapture %}

                  <div open class="footer__block footer__block--menu" {{ block.shopify_attributes }}>
                    {%- if block.settings.show_menu_title -%}
                      <p class="h5">{{ block.settings.menu_title | default: block.settings.menu.title }}</p>
                    {%- endif -%}

                    {{- menu_content -}}
                  </div>
                  <details
                    is="accordion-disclosure"
                    aria-expanded="false"
                    class="accordion footer__block footer__block--menu"
                    {{ block.shopify_attributes }}
                    is="accordion-disclosure"
                  >
                    {%- if block.settings.show_menu_title -%}
                      <summary>
                        <p class="h5">{{ block.settings.menu_title | default: block.settings.menu.title }}</p>
                        {%- render 'icon' with 'chevron-bottom' -%}
                      </summary>
                    {%- endif -%}

                    {{- menu_content -}}
                  </details>
                {%- endif -%}

              {%- when 'newsletter' -%}
                <div class="footer__block footer__block--newsletter" {{ block.shopify_attributes }}>
                  {%- if block.settings.image != blank -%}
                    {%- capture sizes -%}{{ block.settings.image_width }}px{%- endcapture -%}
                    {%- capture widths -%}{{ block.settings.image_width }}, {{ block.settings.image_width | times: 2 | at_most: block.settings.image.width }}{%- endcapture -%}
                    {%- capture style -%}max-width: {{ block.settings.image_width }}px{%- endcapture -%}
                    {{-
                      block.settings.image
                      | image_url: width: block.settings.image.width
                      | image_tag: loading: 'lazy', style: style, sizes: sizes, widths: widths
                    -}}
                  {%- endif -%}

                  <div class="v-stack gap-6">
                    {%- if block.settings.title != blank -%}
                      <p class="{{ block.settings.heading_size }}">{{- block.settings.title | escape -}}</p>
                    {%- endif -%}

                    {%- if block.settings.content != blank -%}
                      <div class="prose text-subdued">
                        {{- block.settings.content -}}
                      </div>
                    {%- endif -%}

                    {%- form 'customer', id: 'footer-newsletter', class: 'footer__newsletter-form form' -%}
                      {%- if form.posted_successfully? -%}
                        {%- capture success_message -%}{{ 'general.newsletter.subscribed_successfully' | t }}{%- endcapture -%}
                        {%- render 'banner', content: success_message, status: 'success' -%}
                      {%- else -%}
                        {%- if form.errors -%}
                          {%- capture error_message -%}{{ form.errors.translated_fields['email'] }} {{ form.errors.messages['email'] }}{%- endcapture -%}
                          {%- render 'banner', content: error_message, status: 'error' -%}
                        {%- endif -%}

                        <input type="hidden" name="contact[tags]" value="newsletter">

                        {%- capture label -%}{{ 'general.newsletter.email' | t }}{%- endcapture -%}
                        {%- render 'input',
                          name: 'contact[email]',
                          label: label,
                          type: 'email',
                          required: true,
                          autocomplete: 'email',
                          enterkeyhint: 'send',
                          self_submit: true
                        -%}
                      {%- endif -%}
                    {%- endform -%}
                  </div>
                </div>
            {%- endcase -%}
          {%- endfor -%}
          {% if section.settings.show_payment_providers or section.settings.show_shipping_methods %}
            {% capture payment_menu_content %} 
              <ul class="footer__payment-icons h-stack wrap gap-4">
                {%- for type in shop.enabled_payment_types -%}
                  <li class="flex">{{ type | payment_type_svg_tag }}</li>
                {%- endfor -%}
              </ul>
            {% endcapture %}
            {% capture shipping_menu_content %} 
              <ul class="footer__payment-icons h-stack wrap gap-4">
                {% for shipping_method in metaobjects.shipping_method.values %}
                  {% if shipping_method.image != blank %}
                    <li class="flex" style="order:{% if shipping_method.order != blank %}{{ shipping_method.order }}{% else %}1{% endif %}">
                      {{ shipping_method.image.value | image_url: width: "48" | image_tag: alt: shipping_method.name }}
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            {% endcapture %}
            <div open class="footer__block footer__block--menu">
              {% if section.settings.show_payment_providers %}
                <div open class="footer__block footer__block--menu">
                  <p class="h5">{{ 'footer.payment_providers' | t }}</p>

                  {{- payment_menu_content -}}
                </div>
              {% endif %}
              {% if section.settings.show_shipping_methods %}
                <div open class="footer__block footer__block--menu">
                  <p class="h5">{{ 'footer.shipping_methods' | t }}</p>

                  {{- shipping_menu_content -}}
                </div>
              {% endif %}
            </div>
            {% if section.settings.show_payment_providers %}
              <details
                is="accordion-disclosure"
                aria-expanded="false"
                class="accordion footer__block footer__block--menu"
                is="accordion-disclosure"
              >
                <summary>
                  <p class="h5">{{ 'footer.payment_providers' | t }}</p>
                  {%- render 'icon' with 'chevron-bottom' -%}
                </summary>

                {{ payment_menu_content }}
              </details>
            {% endif %}
            {% if section.settings.show_shipping_methods %}
              <details
                is="accordion-disclosure"
                aria-expanded="false"
                class="accordion footer__block footer__block--menu"
                is="accordion-disclosure"
              >
                <summary>
                  <p class="h5">{{ 'footer.shipping_methods' | t }}</p>
                  {%- render 'icon' with 'chevron-bottom' -%}
                </summary>

                {{ shipping_menu_content }}
              </details>
            {% endif %}
          {% endif %}
        </div>
      {%- endif -%}

      {%- comment -%}
        ------------------------------------------------------------------------------------------------------------------
        SECONDARY AREA
        ------------------------------------------------------------------------------------------------------------------
      {%- endcomment -%}

      <div class="footer__aside empty:hidden">
        {%- comment -%}
          ----------------------------------------------------------------------------------------------------------------
          SOCIAL MEDIA + LOCALIZATION
          ----------------------------------------------------------------------------------------------------------------
        {%- endcomment -%}

        {%- if section.settings.show_country_selector and localization.available_countries.size > 1 -%}
          {%- assign country_selector = true -%}
        {%- endif -%}

        {%- if section.settings.show_locale_selector and localization.available_languages.size > 1 -%}
          {%- assign locale_selector = true -%}
        {%- endif -%}

        {%- if social_media != blank or country_selector or locale_selector -%}
          <div class="footer__aside-top">
            {{- social_media -}}

            {%- if country_selector or locale_selector -%}
              <div class="h-stack gap-6">
                {%- if social_media == blank -%}
                  {%- assign popover_horizontal_position = 'start' -%}
                {%- else -%}
                  {%- assign popover_horizontal_position = 'end' -%}
                {%- endif -%}

                {%- if country_selector -%}
                  {%- render 'localization-selector',
                    type: 'country',
                    show_country_name: section.settings.show_country_name,
                    show_country_flag: section.settings.show_country_flag,
                    popover_horizontal_position: popover_horizontal_position
                  -%}
                {%- endif -%}

                {%- if locale_selector -%}
                  {%- render 'localization-selector',
                    type: 'locale',
                    popover_horizontal_position: popover_horizontal_position
                  -%}
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- comment -%}
          ----------------------------------------------------------------------------------------------------------------
          COPYRIGHT + PAYMENT METHODS
          ----------------------------------------------------------------------------------------------------------------
        {%- endcomment -%}

        <div class="footer__aside-bottom">
          <div class="footer__copyright gap-1">
            <div>
              {% if section.settings.logo != blank %}
                <a href="{{ routes.root_url }}">
                  {{-
                    section.settings.logo
                    | image_url: width: section.settings.logo.width
                    | image_tag: class: 'footer__logo-image'
                  -}}
                </a>
              {% endif %}
            </div>

            <p class="text-grey nowrap text-sm footer__copyright-text">
              Â© {{ 'now' | date: '%Y' }}, {{ shop.name }}.
            </p>

            <div>
              {%- if section.settings.show_social_media -%}
                {%- render 'social-media' -%}
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Footer",
  "class": "shopify-section--footer",
  "tag": "footer",
  "max_blocks": 5,
  "settings": [
    {
      "type": "checkbox",
      "id": "show_social_media",
