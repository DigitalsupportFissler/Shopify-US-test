{% assign section_classes = padding_classes %}
{% if section.settings.full_width_background %}
  {% assign section_classes = section_classes | append: 'no-padding' %}
{% endif %}
<div {% render 'section-properties', class: section_classes %}>
  {% if section.settings.show_section_id %}
    <div class="section-id-label" style="font-size: 12px; color: #666; margin-bottom: 10px;">
      Section ID: {{ section.id }}
    </div>
  {% endif %}
  <div class="section-stack gap-0">
    {%- render 'section-header',
      subheading: section.settings.subheading,
      heading: section.settings.title,
      heading_color: section.settings.heading_color,
      heading_gradient: section.settings.heading_gradient,
      content: section.settings.content,
      link_text: section.settings.link_text,
      link_url: section.settings.link_url,
      text_alignment: section.settings.text_alignment
    -%}
    <div class="section-stack__main">
      {%- assign text_color = section.settings.chart_text_color | default: settings.text_color -%}
      {%- assign background_color = section.settings.chart_background -%}

      {%- if background_color == blank or background_color == 'rgba(0,0,0,0)' -%}
        {%- assign background_color = settings.background | color_mix: text_color, 95 -%}
      {%- endif -%}

      {%- assign scroll_area_id = 'feature-chart-scroll-' | append: section.id -%}
      {%- assign default_progress = 0 -%}
      <feature-chart
        max-rows="{{ section.settings.max_rows }}"
        {% render 'surface', class: 'feature-chart', background: background_color, text_color: text_color %}
      >
        <div
          id="{{ scroll_area_id }}"
          class="feature-chart__table {% if values_column_count > 1 %}feature-chart__table--multi-columns{% endif %} feature-chart__table--product divide-y scroll-area"
        >
          {%- assign headings_block = section.blocks | where: 'type', 'headings' | first -%}
          {%- assign values_blocks = section.blocks | where: 'type', 'values' -%}
          {%- assign outputted_count = 0 -%}
          {%- assign total_rows_count = 0 -%}

          {%- for i in (1..20) -%}
            {%- assign heading_key = 'heading_' | append: i -%}
            {%- assign value_key = 'value_' | append: i -%}

            {%- assign heading_value = headings_block.settings[heading_key] -%}

            {%- comment -%}We only output the line if at least one value is defined{%- endcomment -%}
            {%- if heading_value != blank
              and values_blocks[0].settings[value_key] != blank
              or values_blocks[1].settings[value_key] != blank
              or values_blocks[2].settings[value_key] != blank
              or values_blocks[3].settings[value_key] != blank
              or values_blocks[4].settings[value_key] != blank
            -%}
              {%- assign total_rows_count = total_rows_count | plus: 1 -%}
            {%- endif -%}
          {%- endfor -%}

          {%- comment -%}We need to create a first row for the products if any{%- endcomment -%}
          {%- capture product_row -%}
            {%- for product_column in values_blocks -%}
              {%- if product_column.settings.product != blank or product_column.settings.custom_image != blank or product_column.settings.custom_heading != blank -%}
                {%- assign chart_product = product_column.settings.product -%}
                {%- assign custom_image = product_column.settings.custom_image -%}
                {%- assign custom_heading = product_column.settings.custom_heading -%}
                {%- assign custom_link_url = product_column.settings.custom_link_url -%}
                {%- assign custom_link_text = product_column.settings.custom_link_text -%}

                <div class="feature-chart__product">
                  {%- if section.settings.viewing_product != blank and request.page_type == 'product' and product == chart_product -%}
                    <span class="badge">{{ section.settings.viewing_product }}</span>
                  {%- endif -%}

                  {%- if custom_image != blank -%}
                    {%- if section.settings.disable_product_image_link -%}
                      {{ custom_image | image_url: width: chart_product.featured_image.width | image_tag: sizes: '(max-width: 699px) 80px, 150px', widths: '80,150,160,300', alt: chart_product.title, class: 'feature-chart__product-image' }}
                    {%- else -%}
                      <a href="{{ chart_product.url }}">
                        {{ custom_image | image_url: width: chart_product.featured_image.width | image_tag: sizes: '(max-width: 699px) 80px, 150px', widths: '80,150,160,300', alt: chart_product.title, class: 'feature-chart__product-image link' }}
                      </a>
                    {%- endif -%}
                  {%- elsif section.settings.show_product_image and chart_product.featured_media -%}
                    {%- if section.settings.disable_product_image_link -%}
                      {{- chart_product.featured_image | image_url: width: chart_product.featured_image.width | image_tag: sizes: '(max-width: 699px) 80px, 150px', widths: '80,150,160,300', alt: chart_product.title, class: 'feature-chart__product-image' -}}
                    {%- else -%}
                      <a href="{{ chart_product.url }}">
                        {{- chart_product.featured_image | image_url: width: chart_product.featured_image.width | image_tag: sizes: '(max-width: 699px) 80px, 150px', widths: '80,150,160,300', alt: chart_product.title, class: 'feature-chart__product-image link' -}}
                      </a>
                    {%- endif -%}
                  {%- endif -%}

                  {%- capture color_swatch -%}
                    {%- if section.settings.show_product_swatch -%}
                      {%- assign color_label_list = 'general.label.color' | t | replace: ', ', ',' | downcase | split: ',' -%}

                      {%- for color_label in color_label_list -%}
                        {%- if chart_product.options_by_name[color_label] != blank -%}
                          <div class="h-stack gap-2 sm:gap-2-5">
                            {%- for option_value in chart_product.options_by_name[color_label].values -%}
                              {%- render 'option-value', type: 'swatch', option_value: option_value, url: option_value.variant.url, size: 'sm' -%}
                            {%- endfor -%}
                          </div>

                          {%- break -%}
                        {%- endif -%}
                      {%- endfor -%}
                    {%- endif -%}
                  {%- endcapture -%}

                  <div class="v-stack {% if color_swatch != blank %}gap-6{% else %}gap-5{% endif %}">
                    <div class="v-stack gap-2">
                      <div class="v-stack sm:gap-0.5">
                        {%- if section.settings.disable_product_image_link -%}
                          <span class="bold line-clamp">{{ custom_heading | default: chart_product.title }}</span>
                        {%- else -%}
                          <a href="{{ chart_product.url }}" class="bold line-clamp link">{{ custom_heading | default: chart_product.title }}</a>
                        {%- endif -%}
                      </div>

                      {{- color_swatch -}}
                    </div>

                  </div>
                </div>
              {%- else -%}
                <div class="feature-chart__product">
                  {%- if section.settings.show_product_image -%}
                    <div>
                      {%- capture product_placeholder -%}{% cycle 'product-apparel-1', 'product-apparel-2', 'product-apparel-3' %}{%- endcapture -%}
                      {{- product_placeholder | placeholder_svg_tag: 'feature-chart__product-placeholder' -}}
                    </div>
                  {%- endif -%}

                  <div class="v-stack gap-5">
                    <div class="v-stack gap-2">
                      <div class="v-stack sm:gap-0.5">
                        <span class="bold line-clamp">{{ 'general.on_boarding.product_title' | t }}</span>
                      </div>
                    </div>
                  </div>
                </div>
              {%- endif -%}
            {%- endfor -%}
          {%- endcapture -%}

          {%- if section.settings.show_product_info -%}
            <div class="feature-chart__table-row feature-chart__table-row--product">
              {{- product_row -}}
            </div>

            {%- if total_rows_count > 6 -%}
              <div class="feature-chart__table-row feature-chart__table-row--product feature-chart__table-row--sticky">
                {{- product_row -}}
              </div>
            {%- endif -%}
          {%- endif -%}

          {% assign last_filled = 1 %}
          {%- for i in (1..20) -%}
            {%- assign heading_key = 'heading_' | append: i -%}
            {%- assign value_key = 'value_' | append: i -%}

            {%- assign heading_value = headings_block.settings[heading_key] -%}
            {%- if heading_value != blank -%}
              {% assign last_filled = i %}
            {%- endif -%}
          {%- endfor -%}

          {%- for i in (1..20) -%}
            {%- assign heading_key = 'heading_' | append: i -%}
            {%- assign value_key = 'value_' | append: i -%}
            {% assign j = i %}

            {%- assign heading_value = headings_block.settings[heading_key] -%}

            {%- comment -%}We only output the line if at least one value is defined{%- endcomment -%}
            {%- if heading_value != blank -%}
              <div
                class="feature-chart__table-row"
                {% if outputted_count > section.settings.max_rows %}
                  hidden
                {% endif %}
              >
                <div
                  class="feature-chart__heading bold {% if last_filled == j %}border-none{% endif %}"
                  {% if outputted_count == 0 %}
                    {{- headings_block.shopify_attributes -}}
                  {% endif %}
                >
                  {{ heading_value }}
                </div>

                {%- for i in (0..4) -%}
                  {%- if values_blocks[i] != blank -%}
                    {%- assign value = values_blocks[i].settings[value_key] -%}
                    {%- assign stripped_value = value | strip_html | strip -%}
                    {%- assign chart_product = values_blocks[i].settings.product -%}
                    {%- assign custom_link_url = values_blocks[i].settings.custom_link_url -%}
                    {%- assign custom_link_text = values_blocks[i].settings.custom_link_text -%}

                    <div
                      class="feature-chart__value {% if last_filled == j %}border-none{% endif %}"
                      {% if outputted_count == 0 %}
                        {{- values_blocks[i].shopify_attributes -}}
                      {% endif %}
                    >
                      <div class="prose text-subdued">
                        {%- if stripped_value == 'FALSE' -%}
                          <svg
                            fill="none"
                            class="icon offset-icon"
                            width="16"
                            height="16"
                            viewBox="0 0 16 16"
                            style="--icon-height: 16px"
                          >
                            <path d="m.94 3.06 12 12 2.12-2.12-12-12L.94 3.06Zm2.12 12 12-12L12.94.94l-12 12 2.12 2.12Z" fill="{{ section.settings.chart_true_false_color | default: section.settings.chart_text_color | default: settings.text_color }}"></path>
                          </svg>
                        {%- elsif stripped_value == 'TRUE' -%}
                          <svg
                            fill="none"
                            class="icon offset-icon"
                            width="20"
                            height="16"
                            viewBox="0 0 20 16"
                            style="--icon-height: 16px"
                          >
                            <path d="m2 7.6 5.259 5.6L18 2" stroke="{{ section.settings.chart_true_false_color | default: section.settings.chart_text_color | default: settings.text_color }}" stroke-width="3"></path>
                          </svg>
                        {%- else -%}
                          {{- value | default: 'â€”' -}}
                        {%- endif -%}
                      </div>

                      {% if last_filled == j %}
                        {%- assign link_url = values_blocks[i].settings.custom_link_url | default: chart_product.url -%}
                        {%- assign link_text = values_blocks[i].settings.custom_link_text
                          | default: 'product.general.to_product'
                          | t
                        -%}
                        {%- if section.settings.show_product_image and chart_product != blank -%}
                          {%- if section.settings.link_display == 'button' -%}
                            {% render 'button', content: link_text, href: link_url, size: 'lg', class: 'mt-6' %}
                          {%- else -%}
                            <div class="feature-chart__table-to-link-wrapper">
                              <a href="{{ link_url }}">
                                <span class="link">{{ link_text }}</span>
                              </a>
                            </div>
                          {%- endif -%}
                        {%- endif -%}
                      {% endif %}
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              </div>

              {%- assign outputted_count = outputted_count | plus: 1 -%}
            {%- endif -%}
          {%- endfor -%}
        </div>
        <div class="feature-chart__scrollbar-wrapper mt-6 pb-4 md:hidden">
          {%- render 'scrollbar', observes: scroll_area_id, default_progress: default_progress, show_buttons: true -%}
        </div>
        {%- if outputted_count > section.settings.max_rows -%}
          <div class="feature-chart__toggle">
            <button
              data-action="toggle-rows"
              data-view-more="{{ section.settings.view_all_text | escape }}"
              data-view-less="{{ section.settings.view_less_text | escape }}"
              class="text-with-icon group"
            >
              <span class="feature-chart__toggle-text reversed-link">
                {{- section.settings.view_all_text | escape -}}
              </span>
              <span class="circle-chevron group-hover:colors">{%- render 'icon' with 'chevron-bottom-small' -%}</span>
            </button>
          </div>
        {%- endif -%}
      </feature-chart>
    </div>
  </div>
</div>

